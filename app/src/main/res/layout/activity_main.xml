<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/fl_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/iv_chessboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_scaler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scale" />

                <RadioButton
                    android:id="@+id/rb_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select" />

                <RadioButton
                    android:id="@+id/rb_transformer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transform" />

                <RadioButton
                    android:id="@+id/rb_cropper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crop" />

                <RadioButton
                    android:id="@+id/rb_pencil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/pencil" />

                <RadioButton
                    android:id="@+id/rb_eraser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eraser" />

                <RadioButton
                    android:id="@+id/rb_eyedropper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eyedropper" />

                <RadioButton
                    android:id="@+id/rb_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text" />
            </RadioGroup>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_foreground_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/block"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rb_background_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/block"
                    android:textColor="@color/white" />
            </RadioGroup>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:gravity="center"
                android:orientation="horizontal"
                android:rowCount="4">

                <TextView
                    android:layout_gravity="center"
                    android:labelFor="@+id/et_alpha"
                    android:text="@string/a" />

                <EditText
                    android:id="@+id/et_alpha"
                    android:layout_width="32dp"
                    android:autofillHints="0"
                    android:inputType="text"
                    android:text="@string/ff"
                    android:textAlignment="center" />

                <SeekBar
                    android:id="@+id/sb_alpha"
                    android:layout_width="256dp"
                    android:layout_gravity="center"
                    android:max="255"
                    android:progress="255" />

                <TextView
                    android:layout_gravity="center"
                    android:labelFor="@+id/et_red"
                    android:text="@string/r" />

                <EditText
                    android:id="@+id/et_red"
                    android:layout_width="32dp"
                    android:autofillHints="0"
                    android:inputType="text"
                    android:maxLength="2"
                    android:text="@string/double_zero"
                    android:textAlignment="center" />

                <SeekBar
                    android:id="@+id/sb_red"
                    android:layout_width="256dp"
                    android:layout_gravity="center"
                    android:max="255" />

                <TextView
                    android:layout_gravity="center"
                    android:labelFor="@+id/et_green"
                    android:text="@string/g" />

                <EditText
                    android:id="@+id/et_green"
                    android:layout_width="32dp"
                    android:autofillHints="0"
                    android:inputType="text"
                    android:maxLength="2"
                    android:text="@string/double_zero"
                    android:textAlignment="center" />

                <SeekBar
                    android:id="@+id/sb_green"
                    android:layout_width="256dp"
                    android:layout_gravity="center"
                    android:max="255" />

                <TextView
                    android:layout_gravity="center"
                    android:labelFor="@+id/et_blue"
                    android:text="@string/b" />


                <EditText
                    android:id="@+id/et_blue"
                    android:layout_width="32dp"
                    android:autofillHints="0"
                    android:inputType="text"
                    android:maxLength="2"
                    android:text="@string/double_zero"
                    android:textAlignment="center" />

                <SeekBar
                    android:id="@+id/sb_blue"
                    android:layout_width="256dp"
                    android:layout_gravity="center"
                    android:max="255" />

            </GridLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>